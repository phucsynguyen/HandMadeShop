@model IEnumerable<Project_63135350.Models.Model_63135350.ProductCategory_63135350>
@if (Model != null && Model.Any())
{
    <div class="row">
        <div class="col text-center">
            <div class="section_title new_arrivals_title">
                <h2>Danh mục ưa thích</h2>
            </div>
        </div>
    </div>
    <div class="banner">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <div class="banner_item align-items-center" style="background-image: url(@item.Icon)">
                            <div class="banner_category">
                                <a href="/danh-muc-san-pham/@item.Alias-@(item.Id)">@item.Title</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}
